<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".soal_latihan"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="550dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="150dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/latihan_soal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF6642"
                android:textSize="30dp"
                android:textAlignment="center"
                android:text="Soal berbentuk pilihan ganda. silahkan memilih pilihan A,B,C dan D sesuai jawaban pada soal."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF6642"
                android:paddingTop="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Selamat mengerjakan..."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">
                <Button
                    android:id="@+id/mulai"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:text="Mulai"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button"/>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_button">
                    <ImageButton
                        android:id="@+id/img_button_home"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_home"/>
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".soal_latihan"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat Datang di"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latihan Soal"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowRadius="25"
                android:textSize="60dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textAlignment="center"
                android:text="Soal berbentuk pilihan ganda. silahkan memilih pilihan A,B,C dan D sesuai jawaban pada soal."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:layout_marginBottom="20dp"
                android:textSize="30dp"
                android:textAlignment="center"
                android:text="Selamat mengerjakan..."/>


            <Button
                android:id="@+id/mulai"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:text="Mulai "
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:text="Home "
                android:textColor="@color/white"/>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
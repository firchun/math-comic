<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daftar"
    android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_daftar"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

                <Button
                    android:id="@+id/chapter1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/button"
                    android:drawableLeft="@drawable/avatar_3"
                    android:text="Chapter 1 :&#10;Go to Lotus Garden&#10;(Hubungan Antar Garis)"
                    android:padding="0dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />
                <Button
                    android:id="@+id/chapter2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/button"
                    android:drawableLeft="@drawable/avatar_2"
                    android:text="Chapter 2 :&#10;Tempat Sampah yang Unik&#10;(Membagi Ruas Garis)"
                    android:padding="0dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />
                <Button
                    android:id="@+id/chapter3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/button"
                    android:drawableLeft="@drawable/avatar_1"
                    android:text="Chapter 3 :&#10;Delicious Pizza&#10;(Mengenal Sudut)"
                    android:padding="0dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />



        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="top"
    android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top | center"
    android:paddingEnd="0dp"
    android:id="@+id/column1"
    >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/welcome"
        >

    </ImageView>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="400dp"
        android:layout_height="530dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:paddingTop="110dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:background="@drawable/menu">
        <Button
            android:id="@+id/prolog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prolog"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:textSize="30dp"
            android:backgroundTint="@color/button">

        </Button>
        <Button
            android:id="@+id/pengenalan_tokoh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengenalan Tokoh"
            android:layout_marginVertical="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:backgroundTint="@color/button">

        </Button>
        <Button
            android:id="@+id/daftar_cerita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Cerita"
            android:layout_marginVertical="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:backgroundTint="@color/button">

        </Button>
        <Button
            android:id="@+id/rangkuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rangkuman"
            android:layout_marginVertical="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:backgroundTint="@color/button">

        </Button>
        <Button
            android:id="@+id/soal_latihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soal Latihan"
            android:layout_marginVertical="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:backgroundTint="@color/button">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/dock"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">

        <Button
            android:id="@+id/petunjuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petunjuk"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="23dp"
            android:backgroundTint="@color/button">

        </Button>

        <Button
            android:id="@+id/profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="23dp"
            android:backgroundTint="@color/button"
            android:layout_marginHorizontal="10dp">

        </Button>


    </LinearLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
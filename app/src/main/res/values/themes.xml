<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MathKomik" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryVariant">#0069FF</item>
        <item name="colorOnPrimary">@color/button</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_shadow</item>
        <item name="colorSecondaryVariant">@color/button_shadow</item>
        <item name="colorOnSecondary">@color/button_shadow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MathKomik.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MathKomik.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MathKomik.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>